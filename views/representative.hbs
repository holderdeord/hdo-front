{{#contentFor "title"}}{{name}} | Representanter | Holder de ord{{/contentFor}}

<div class="masthead" style="background-image:url('https://farm7.staticflickr.com/6162/6220275786_c6fbb67ebf_b.jpg');"></div>

<div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-9">
        <h1>{{name}}</h1>
        <hr>

        <div class="row">
            <div class="col-md-4">
                <img class="portrait" src="{{image}}" alt="{{name}}" width="240" height="320">
            </div>

            <div class="col-md-3"></div>

            <div class="col-md-4 text-center">
                {{#unless attending}}
                    <p class="text-muted">Møter for tiden ikke på Stortinget</p>
                {{/unless}}

                <div class="row" style="padding-top: 0.5em;">
                    <a href="/partier/{{party.slug}}">
                        <img src="{{party.logo}}" alt="{{party.name}}s logo">
                    </a>
                </div>

                <div class="row">
                    <p><a href="/partier/{{party.slug}}">{{party.name}}</a></p>
                      for
                    <a href="/distrikter/{{district.slug}}">{{district.name}}</a>
                </div>

                <div class="row" style="padding-top: 0.5em; font-size: 3em;" >
                    {{age}} år
                </div>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-6">
                {{#if twitter}}
                    {{> twitter}}
                {{/if}}
            </div>

            <div class="col-md-6">
                {{#if committees}}
                    Medlem av
                    <ul>
                        {{#committees}}
                            <li>{{name}}</li>
                        {{/committees}}
                    </ul>
                {{/if}}

                {{> no.svg width=500 height=550}}
                {{#contentFor "script"}}
                  // hacky - should be able to just pass district name to partial
                  $(function() {
                    $(".county[data-county='{{{district.name}}}']").attr("active", true);
                  })
                {{/contentFor}}
            </div>
        </div>

    </div>
</div>
